<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:text="Mercado"
		android:textSize="30sp"
		android:textAlignment="center"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
	/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginEnd="30dp"
		>
			<Button
				android:id="@+id/cadastro_clientes"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Cadastro de clientes"
				android:textAlignment="center"
				android:textAllCaps="false"
				tools:ignore="ButtonStyle"
			/>

			<Button
				android:id="@+id/listar_clientes"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Listar clientes"
				android:textAlignment="center"
				android:textAllCaps="false"
				android:layout_marginStart="12dp"
				tools:ignore="ButtonStyle"
			/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginStart="30dp"
			android:layout_marginEnd="30dp"
		>
			<Button
				android:id="@+id/cadastro_produtos"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Cadastro de produtos"
				android:textAlignment="center"
				android:textAllCaps="false"
				tools:ignore="ButtonStyle"
			/>

			<Button
				android:id="@+id/listar_produtos"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Listar produtos"
				android:textAlignment="center"
				android:textAllCaps="false"
				android:layout_marginStart="12dp"
				tools:ignore="ButtonStyle"
			/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginStart="30dp"
			android:layout_marginEnd="30dp"
		>
			<Button
				android:id="@+id/cadastro_compras"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Cadastro de compras"
				android:textAlignment="center"
				android:textAllCaps="false"
				tools:ignore="ButtonStyle"
			/>

			<Button
				android:id="@+id/listar_compras"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:minWidth="0dp"
				android:padding="0dp"
				android:text="Listar compras"
				android:textAlignment="center"
				android:textAllCaps="false"
				android:layout_marginStart="12dp"
				tools:ignore="ButtonStyle"
			/>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
